<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.foreseer.erate.Fragments.RateFragment"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imageView_firstCurrency"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:srcCompat="@drawable/russia"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/imageView_secondCurrency"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:srcCompat="@drawable/norway"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView_secondCurrency"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="@string/currency_nok"
        android:textSize="25dp"
        app:layout_constraintRight_toLeftOf="@+id/imageView_secondCurrency"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="@+id/imageView_secondCurrency"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@+id/imageButton"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/textView_firstCurrency"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="@string/currency_rub"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="@+id/imageView_firstCurrency"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView_firstCurrency"
        android:layout_marginLeft="16dp"
        app:layout_constraintRight_toLeftOf="@+id/imageButton"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/textView_currencyAmount"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="@string/currency_rate"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView_firstCurrency"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/textView_secondCurrency"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/textView_firstCurrencyHint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:text="@string/currency_name_RUB"
        android:textAlignment="textEnd"
        android:layout_gravity="end"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/imageView_firstCurrency"
        app:layout_constraintRight_toRightOf="@+id/textView_firstCurrency"
        app:layout_constraintTop_toBottomOf="@+id/imageView_firstCurrency" />

    <TextView
        android:id="@+id/textView_secondCurrencyHint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:text="@string/currency_name_NOK"
        app:layout_constraintLeft_toLeftOf="@+id/textView_secondCurrency"
        app:layout_constraintRight_toRightOf="@+id/imageView_secondCurrency"
        app:layout_constraintTop_toBottomOf="@+id/imageView_secondCurrency" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="-5dp"
        android:adjustViewBounds="true"
        android:background="?android:attr/detailsElementBackground"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/textView_secondCurrencyHint"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/textView_firstCurrencyHint"
        app:layout_constraintRight_toLeftOf="@+id/textView_secondCurrencyHint"
        app:layout_constraintTop_toBottomOf="@+id/textView_currencyAmount"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/error" />

</android.support.constraint.ConstraintLayout>
